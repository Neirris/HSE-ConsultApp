{
  "version": 2,
  "builds": [
    {
      "src": "api/index.mjs",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/auth/(.*)",
      "destination": "/api/index.mjs"
    },
    {
      "source": "/profile/(.*)",
      "destination": "/api/index.mjs"
    },
    {
      "source": "/users/(.*)",
      "destination": "/api/index.mjs"
    },
    {
      "source": "/chats/(.*)",
      "destination": "/api/index.mjs"
    },
    {
      "source": "/events/(.*)",
      "destination": "/api/index.mjs"
    },
    {
      "source": "/notifications/(.*)",
      "destination": "/api/index.mjs"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/api/index.mjs"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "POSTGRES_URL": "postgres://default:j3zDABPQJhF1@ep-soft-breeze-a4f4kco8.us-east-1.aws.neon.tech:5432/verceldb?sslmode=require"
  }
}
