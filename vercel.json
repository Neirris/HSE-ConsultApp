{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/auth(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/profile(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/users(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/chats(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/events(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/notifications(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/admin(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "build": {
    "env": {
      "DATABASE_URL": "@postgres://default:j3zDABPQJhF1@ep-soft-breeze-a4f4kco8.us-east-1.aws.neon.tech:5432/verceldb?sslmode=require"
    }
  },
  "hooks": {
    "build": {
      "beforeBuild": "npm run initialize-db && npm run seed-db"
    }
  }
}
